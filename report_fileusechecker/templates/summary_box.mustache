{{!
    Summary Box Template
    
    Context variables:
    - has_unused_files: Boolean whether there are unused files
    - total_files: Number of unused files
    - total_size_formatted: Formatted total file size
    - affected_activities_count: Number of affected activities
}}

<div class="summary-box-wrapper">
    {{#unless has_unused_files}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa fa-check-circle"></i>
        <strong>{{#str}}great{{/str}}</strong> {{#str}}no_unused_files{{/str}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{else}}
    <div class="summary-container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="summary-stat-card">
                    <div class="stat-header">
                        <div class="stat-icon unused-files">
                            <i class="fa fa-file"></i>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">{{#str}}unused_files_list{{/str}}</span>
                            <span class="stat-value">{{total_files}}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="summary-stat-card">
                    <div class="stat-header">
                        <div class="stat-icon total-size">
                            <i class="fa fa-database"></i>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">{{#str}}total_file_size{{/str}}</span>
                            <span class="stat-value">{{total_size_formatted}}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="summary-stat-card">
                    <div class="stat-header">
                        <div class="stat-icon affected-items">
                            <i class="fa fa-cubes"></i>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">{{#str}}affected_activities{{/str}}</span>
                            <span class="stat-value">{{affected_activities_count}}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="summary-stat-card">
                    <div class="stat-header">
                        <div class="stat-icon status">
                            <i class="fa fa-info-circle"></i>
                        </div>
                        <div class="stat-info">
                            <span class="stat-label">{{#str}}scan_status{{/str}}</span>
                            <span class="stat-value">{{#str}}ready{{/str}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/unless}}
</div>
